@model IEnumerable<ChattClient_MVC.ChattServiceReference.Message>
@{
    ViewBag.Title = "Index";
}

<div class="chat">
    <div class="chat-header">
        <h1>Chat</h1>
    </div>
    <div class="chat-history">
        @foreach (var item in Model.OrderByDescending(x=> x.Id))
        {
            <ul class="no-padding">
                <li class="chat-item">
                    <img src="data:image/png;base64," style="height:30px; width: 30px;"/>
                    <div class="message">
                        <span class="message__user-name">@item.UserName</span>
                        <time class="message__time">
                            @item.TimeStamp
                        </time>
                        <p class="message__text">@item.MessageText</p>
                    </div>
            </ul>
        }

    </div>
    <div class="chat-controls">
        <form action="~/Chat/SendMessage">
            <textarea class="chat-controls__textarea" rows="2" placeholder="Type your message" type="text" name="textInput" value="textInput"></textarea>
            <div class="btns-row">
                <button class="chat-controls__btn" type="submit">Send</button>
            </div>
        </form>
    </div>
</div>
